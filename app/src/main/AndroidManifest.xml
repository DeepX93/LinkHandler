<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linkhero.linkhandler">

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.AppCompat.Light"><?xml version="1.0" encoding="utf-8"?>
		<manifest xmlns:android="http://schemas.android.com/apk/res/android"
			package="com.linkhero.linkhandler">

			<application
				android:allowBackup="true"
				android:label="LinkHandler"
				android:supportsRtl="true"
				android:theme="@android:style/Theme.Black.NoTitleBar">

				<!-- Broadcast Receiver to handle links -->
				<service android:name=".LinkInterceptorService"
					android:exported="true">
					<intent-filter>
						<action android:name="android.intent.action.VIEW" />
						<category android:name="android.intent.category.DEFAULT" />
						<data android:scheme="http"/>
						<data android:scheme="https"/>
					</intent-filter>
				</service>

			</application>
		</manifest>
	</application>

</manifest>
